<section>
  <center>
    {{> title data=name big=true }}
  </center>
  <table class="table table-striped">
    <tbody>
      <tr>
        <td class="fs-4"> General information</td>
        <td>
          <ul>
            <li>
              <span>Birthdate:</span>
                  <time datetime="{{birthdate}}">{{birthdate}}</time>
            </li>
            <li>
              <span>Birthplace:</span>
                  <address>
                  {{birthplace}}
                </address>
            </li>
            <li>
              <span>Deathdate:</span>
                  <time datetime="{{deathdate}}">{{deathdate}}</time>
            </li>
            <li>
              <span>Deathplace:</span>
                  <address>
                  {{deathplace}}
                </address>
            </li>
            <li>
              <span>Nationality:</span>
              <span>
                <strong>
                  {{nationality}}
                </strong>
              </span>
            </li>
            <li>
              <span>Occupation:</span>
              <span><em>{{occupation}}</em></span>
            </li>
            <li>
              <dl>
                <dt>
                  <span>Known for:</span>
                </dt>
                {{#each known_for}}
                <dd>
                  {{this}}
                </dd>
                {{/each}}
              </dl>
            </li>
          </ul>
        </td>
      </tr>
      <tr>
        <td  class="fs-4">Education</td>
        <td>
          <ul>
            {{#each education}}
              <li>
                <span>Degree:</span><span>{{degree}}</span>
              </li>
              <li>
                <span>Field:</span><span>{{field}}</span>
              </li>
              <li>
                <span>Institution:</span><span>{{institution}}</span>
              </li>
              <li>
                <span>Year:</span>
                <time datetime="{{year}}">{{year}}</time>
              </li>
            {{/each}}
          </ul>
        </td>
      </tr>
      <tr>
        <td  class="fs-4">Notable publications</td>
        <td>
          <ol>
            {{#each notable_publications}}
            <li>
              <ul>
                <li>                
                  <span>Title:</span>
                  <span><cite>{{title}}</cite></span>
                </li>
                <li>
                  <span>Year:</span>
                  <time datetime="{{year}}">{{year}}</time>
                </li>
                <li>                
                  <span>Publisher:</span>
                  <span>{{publisher}}</span>
                </li>
              </ul>
            </li>
            <br>        
           {{/each}}
          </ol>
        </td>
      </tr>
      <tr>
        <td class="fs-4">Partners</td>
        <td>
          <ul>
            {{#each partners}}
            <li>                
              <span>Name:</span>
              <span>{{name}}</span>
            </li>
            <li>                
              <span>Relationship:</span>
              <span>{{relationship}}</span>
            </li>
            <li>
               <span>Years:</span>
               <time datetime="{{years}}">{{years}}</time>
            </li>
            <br>
            {{/each}}
          </ul>
        </td>
      </tr>
      <tr>
        <td class="fs-4">Awards</td>
        <td>
          <ul>
            {{#each awards}}
            <li>                
              <span>Title:</span>
              <span><cite>{{title}}</cite></span>
            </li>
            <li>
               <span>Year:</span>
               <time datetime="{{year}}">{{year}}</time>
            </li>
            <li>                
              <span>Description:</span>
              <span><q>{{description}}</q></span>
            </li>
            {{/each}}
          </ul>
        </td>
      </tr>
      <tr>
        <td class="fs-4">Influence</td>
        <td>
          <ul>
            {{#each influence}}
            <li>                
              <cite>{{this}}</cite>
            </li>
            {{/each}}
          </ul>
        </td>
      </tr>
      <tr>
        <td class="fs-4">Influenced</td>
        <td>
          <ul>
            {{#each influenced}}
            <li>                
              <cite>{{this}}</cite>
            </li>
            {{/each}}
          </ul>
        </td>
      </tr>
      <tr>
        <td class="fs-4">Quotes</td>
        <td>
          <ul>
            {{#each quotes}}
            <li>                
              <q>{{this}}</q>
            </li>
            {{/each}}
          </ul>
        </td>
      </tr>
      <tr>
        <td class="fs-4">Major discoveries</td>
        <td>
          <ul>
            {{#each major_discoveries}}
            <li>                
              <span>Title:</span>
              <span><cite>{{title}}</cite></span>
            </li>
            <li>
               <span>Year:</span>
               <time datetime="{{year}}">{{year}}</time>
            </li>
            <li>                
              <span>Description:</span>
              <blockquote>{{description}}</blockquote>
            </li>
            {{/each}}
          </ul>
        </td>
      </tr>
      <tr>
        <td class="fs-4">Contributions</td>
        <td>
          <ul>
            {{#with contributions}}
            <li>                
              <span>Title:</span>
              <span><cite>{{title}}</cite></span>
            </li>
            <li>
               <span>Year:</span>
               <time datetime="{{year}}">{{year}}</time>
            </li>
            <li>                
              <span>Description:</span>
              <blockquote>{{description}}</blockquote>
            </li>
            <li>                
              <span>ield:</span>
              <span><cite>{{field}}</cite></span>
            </li>
            {{/with}}
          </ul>
        </td>
      </tr>
    </tbody>
  </table> 
  {{> hspcln }}
</section>