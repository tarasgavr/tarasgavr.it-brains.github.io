{{#with navigation}}  
  <section class="mb-3">
    <div class="row card">
      <ul class="nav">
          {{#each links}}
        <li class="nav-item">
          <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{href}}">{{text}}</a>
        </li>
          {{/each}}
      </ul>
    </div>
  </section>
{{/with}}
<div class="row">
    {{#with formBlock}} 
  <div class="col-8">
      <section class="mb-3">
        <h2 class="text-dark">{{header}}</h2>
        <div class="mt-5 mb-5">{{rating.title}}: {{rating.value}}</div>
        <div class="mt-3 mb-3">
          <ul class="nav nav-tabs">
            {{#with actionBlock}}
              {{#each tabs}}
                <li class="nav-item">
                  <a class="nav-link {{#if isActive}} active {{/if}}" href="#">{{text}}</a>
                </li>
              {{/each}}
          </ul>
        </div>
        <hr class="mt-5 mb-5">
              {{#with report}}
                <div class="mt-5 mb-5">
                  <div class="card">
                    <div class="card-body">
                      <h3>{{title}}</h3>
                      <a class="btn btn-secondary" href="{{button.link}}">{{button.text}}</a>
                    </div>
                  </div>
                </div>
              {{/with}}
            {{/with}}
        <hr class="mt-5 mb-5">
              {{#with feedbackBlock}}
                <div class="mt-5">
                  <h1>{{title}}</h1>
                  {{#each buttons}}              
                    <a class="mt-3 mb-3 me-3 btn {{#if isWarning}} btn-warning
                    {{else}}
                      {{#if isSuccess}}
                        btn-success
                      {{else}}
                        btn-danger                        
                      {{/if}}
                    {{/if}}" href="{{link}}">{{text}}</a>
                  {{/each}}
                </div>
              {{/with}}
      </section>
  </div>
  <div class="col-4">
    {{#with goodsInfo}}
    <div class='card mb-3'>
      <div class='card-body'>
        <img src="{{photo}}" alt="{{name}}" class="card-img-top w-50">
        <div class="fs-5 fw-bold">{{name}}</div>
      </div>
    </div>
    <div class='card mb-3'>
      <div class='card-body'>
          <div class="fs-4 fw-bold">{{price}}</div>
          {{#if inMarket}}
            <div class="fs-5">Э в наявності</div>
          {{/if}}
            <div class="d-flex flex-column">
              {{#each buttons}}
                <a class="mt-3 btn {{#if isPrimary}} w-25 btn-primary
                {{else}}
                  btn-secondary w-50
                {{/if}}" href="{{link}}">{{text}}</a>
              {{/each}}
            </div>
      </div>
    </div>
    <div class='card'>
      <div class='card-body'>
          {{../../reviewList.0.reviewBody.seller.title}}:
          <span class="fw-bold">{{../../reviewList.0.reviewBody.seller.value}}</span>
      </div>
    </div>
    {{/with}}
    {{/with}} <!--end of formBlock -->
  </div>
</div>
<hr>
<section>
  {{#each reviewList}}
    <div class='card mb-5 mt-2'>
      <div class='card-body'>
        <div class='card'>
          {{#with title}}
          <div class='card-header'>
            <div class="fs-4 fw-bold">{{userName}}</div>
            <div>{{caption}}</div>
            <div>{{date}}</div>
          </div>
          {{/with}}
          <div class="card-body">
          {{#with reviewBody}}            
            <div class="mt-3">
              {{seller.title}}:
              {{seller.value}}
            </div>
            <div class="mt-3">
              {{rating.title}}:
              {{rating.value}}
            </div>
            {{#each text}}              
               <p class="mt-3">{{this}}</p>
            {{/each}}
            <div class="mt-3">
              <div class="fw-bold">{{advantages.title}}:</div>
              {{advantages.text}}
            </div>
            <div class="mt-3">
              <div class="fw-bold">{{disadvantages.title}}:</div>
              {{disadvantages.text}}
            </div>
            <div class="row mt-3">
               {{#each images}}
                 <img src="{{this}}" alt="#" class="w-25 me-2">
               {{/each}}
            </div>
          </div>
        </div>
        {{#each coments}}
          <div class='card ms-5 mt-3'>
          <div class='card-body'>
            <div class="fs-4 fw-bold">{{userName}}</div>
            <div>{{date}}</div>
            <div class="fs-5*">{{text}}</div>
          </div>
          </div>
        {{/each}}
          {{/with}} <!--end of reviewBody -->
      </div>
    </div>
  {{/each}} <!-- end of reviewlist -->
</section>
<section>
  {{#with service}}
    <div class="w-100 bg-success text-center p-3">
      <h2 class="text-light mb-2">{{title}}</h2>
      <p class="text-light mb-2">{{description}}</p>
      <a href="{{buttons.0.link}}" class="btn btn-primary">{{buttons.0.text}}</a>
    </div>
  {{/with}}
</section>
<section>
  <div class="col-sm-10 row row-cols-1 row-cols-md-5 g-2">
  {{#each footer}}
    <div class="col-2">
      <ul class="nav">
        <li class="nav-item">                
          {{#each this}}
              <a href="{{link}}" class="nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
          {{/each}}
        </li>
      </ul>
    </div>
  {{/each}}
  </div>
</section>