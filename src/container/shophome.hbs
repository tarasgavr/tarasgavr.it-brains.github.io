{{#with navigation}}  
<section>
  <div class="row card">
    <ul class="nav">
        {{#each links}}
      <li class="nav-item">
        <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{href}}">{{text}}</a>
      </li>
        {{/each}}
    </ul>
  </div>
</section>
{{/with}}
<hr>
{{#with newsBlock}}
<section>
    <h2 class="text-center">{{title}}</h2>
    <div class="row row-cols-1 row-cols-md-4 g-4">
    {{#each cards}}
      <div class="col">
        <div class="card text-bg-dark mb-3">
          <div class="card-header card-title">
            {{title}}
            {{#if isTop}}
              <span class="badge bg-success rounded-pill">Top</span>
            {{/if}}
            {{#if isNew}}
              <span class="badge bg-danger rounded-pill">New</span>
            {{/if}}
          </div>
          <div class="card-body">
            <p class="card-text">{{description}}</p>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
  </section>
{{/with}}
<hr>
{{#with goodsBlock}}
<section>
    <h2 class="text-center">{{title}}</h2>
    <ul class="nav nav-tabs">
    {{#each tabs}}
      <li class="nav-item">
          {{#if isActive}}
          <a href="#" class="nav-link active">{{text}}</a>
          {{else}}
            {{#if isDisabled}}
            <a href="#" class="nav-link disabled">{{text}}</a>
            {{else}}
            <a href="#" class="nav-link">{{text}}</a>
            {{/if}}
          {{/if}}
      </li>
    {{/each}}
    </ul>
    <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each cards}}
      <div class="col">
        <div class="card mb-3">
        <img class="card-img-top" src="{{image}}" alt="#">  
          <div class="card-title mb-2">
            {{title}}
            {{#if isHot}}
              <span class="badge bg-info rounded-pill">Hot</span>
            {{/if}}
            {{#if isNew}}
              <span class="badge bg-warning rounded-pill">New</span>
            {{/if}}
          </div>
          <div class="card-body">
            <p class="card-text">{{description}}</p>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
</section>
{{/with}}
<hr>
<section>
  {{#with subscribe}}
    <div class="card text-bg-dark">
      <div class="card-body">
        <h2 class="text-light">{{header}}</h2>
        <p class="card-text">{{description}}</p>
        {{#each buttons}}
          <a href="{{link}}" class="btn btn-primary">{{text}}</a>
          {{#if @first}}
            <br>
            <br>
          {{/if}}
        {{/each}}
      </div>
    </div>
  {{/with}}
</section>
<hr>
<section>
  {{#with service}}
    <div class="card text-bg-success text-center">
      <div class="card-body">
        <h2 class="text-light">{{title}}</h2>
        <p class="card-text">{{description}}</p>
        <a href="{{buttons.0.link}}" class="btn btn-primary">{{buttons.0.text}}</a>
      </div>
    </div>
  {{/with}}
<hr>
</section>
<section>
  <div class="col-sm-10 row row-cols-1 row-cols-md-5 g-4">
  {{#each footer}}
    <div class="col-2">
      <ul class="nav">
        <li class="nav-item">                
          {{#each this}}
            {{#if @last}}
              <a href="{{link}}" class="disabled text-primary nav-link">{{text}}</a>  
            {{else}}
              <a href="{{link}}" class="text-primary nav-link">{{text}}</a>
            {{/if}}
          {{/each}}
        </li>
      </ul>
    </div>
  {{/each}}
  </div>
</section>