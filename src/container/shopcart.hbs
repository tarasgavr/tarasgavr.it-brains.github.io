{{#with navigation}}  
<section class="mb-3">
  <div class="row card">
    <ul class="nav">
        {{#each links}}
      <li class="nav-item">
        <a class="nav-link {{#if @last}} disabled {{/if}}" href="{{href}}">{{text}}</a>
      </li>
        {{/each}}
    </ul>
  </div>
</section>
{{/with}}
<hr>
{{#with header}}
  <section class="mb-3">
    <h1 class="text-dark">{{title}}</h1>
    <a class="btn btn-outline-secondary" href="{{button.link}}">{{button.text}}</a>
    <hr>
  </section>
{{/with}}
<section class="mb-3">
{{#each goodsBlock}}
  {{> cartGoodsItem }}
{{/each}}
</section><!-- end of goodsBlock -->
<hr>
{{#with total}}
<section class="mb-3">
  <div class="mb-3">
    <div class="fs-3 fw-bold">{{title}}</div>
    <div class="fs-3 fw-bold">{{amount}}</div>
    <div class="text-secondary">{{delivery}}</div>
  </div>
  {{#each buttons}}
    <div class="w-50 pt-4">
      <a href="{{link}}" class="btn {{#if isSuccess}} btn-success {{else}} btn-outline-success {{/if}}">
        {{text}}
      </a>
    </div>
  {{/each}}
</section>
{{/with}}
<hr>
{{#with goodsOtherBlock}}
  <section class="mb-3">
    <div class="fs-2 fw-bold text-center">{{title}}</div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each cards}}
      <div class="col">
        <div class="card g-0">
          <img src="{{image}}" class="card-img-top" alt="{{title}}">
          <div class="card-header card-title">
            {{title}}
            {{#if isHot}}
              <span class="badge bg-warning rounded-pill">Hot</span>
            {{/if}}
            {{#if idNew}}
              <span class="badge bg-primary rounded-pill">New</span>
            {{/if}}
          </div>
          <div class="card-body">
            <p class="card-text">{{description}}</p>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
  </section>
{{/with}}
<hr>
{{#with subscribe}}
  <section class="mb-3">
    <div class="text-bg-dark w-100">
      <div class="mb-2">
        <h2 class="text-light">{{header}}</h2>
        <p class="text-light">{{description}}</p>
        {{#each buttons}}
          <div class="pt-2">
            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
          </div>
        {{/each}}
      </div>
    </div>
  </section>
{{/with}}
<hr>
<section>
  <div class="col-sm-10 row row-cols-1 row-cols-md-5 g-4">
  {{#each footer}}
    <div class="col-2">
      <ul class="nav">
        <li class="nav-item">                
          {{#each this}}
              <a href="{{link}}" class="text-primary nav-link {{#if @last}} disabled {{/if}}">{{text}}</a>
          {{/each}}
        </li>
      </ul>
    </div>
  {{/each}}
  </div>
</section>