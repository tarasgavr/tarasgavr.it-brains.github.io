{{#with heading}}  
<section class="card">
      {{#with main}}
    <div class="card">
      <div class="card-body">
        <h1 class="text-dark">{{title}}</h1>
        <dfn class="text-dark">{{text}}</dfn>
        <br>
        {{#with button_text}}
          <button type="button" class="btn btn-primary">{{solid}}</button>
          <br>
          <br>
          <button type="button" class="btn btn-outline-primary">{{outline}}</button>
        {{/with}}
      </div>
    </div>
    <br>
      {{/with}}
      {{#with second}}
    <div class="card">
      <div class="card-body">
        <h2 class="text-secondary">{{title}}</h2>
        <dfn class="text-dark">{{text}}</dfn>
        <br>
        {{#with button_text}}
          <button type="button" class="btn btn-secondary">{{solid}}</button>
          <br>
          <br>
          <button type="button" class="btn btn-outline-secondary">{{outline}}</button>
        {{/with}}
      </div>
    </div>
    <br>
      {{/with}}
      {{#with subblock}}
    <div class="card">
      <div class="card-body">
        <h3 class="text-dark">{{title}}</h3>
        <dfn class="text-dark">{{text}}</dfn>
        <br>
        {{#with button_text}}
          <button type="button" class="btn btn-dark">{{solid}}</button>
          <br>
          <br>
          <button type="button" class="btn btn-outline-dark">{{outline}}</button>
        {{/with}}
      </div>
    </div>
      {{/with}}
</section>
{{/with}}