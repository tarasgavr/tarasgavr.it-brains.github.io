{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
  {{#with main}}
  <main>
    <section>
      <div>
        {{> title data=summary.title big=true }}
      </div>
      <div>
        <p>
          {{> title data=summary.text simple=true }}
        </p>
      </div>
    </section>

    <section>
      <div>
        <h2>{{> title data=experience.title }}</h2>
      </div>
      <div>
        <p>
          {{> title data=experience.text simple=true }}
        </p>
      </div>
    </section>
  </main>
  {{/with}}
</div>

