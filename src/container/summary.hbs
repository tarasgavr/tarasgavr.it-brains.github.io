{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<header>
  {{> header }}
</header>
<div>
  {{#with main}}
  <main>
    <section>
      <div class='card w-50'>
        <div class='card-body'>
            {{> title data=summary.title big=true }}
            <p>
              {{> title data=summary.text simple=true }}
            </p>
        </div>
      </div>
    </section>

    <section>
      <div class='card w-50'>
        <div class='card-body'>
          <h2>{{> title data=experience.title }}</h2>
          <p>
            {{> title data=experience.text simple=true }}
          </p>
        </div>
      </div>
    </section>
  </main>
  {{/with}}
</div>
<footer>
  {{> footer }}
</footer>

